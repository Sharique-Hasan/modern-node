{
  "name": "modern-node",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "meow": "^3.7.0",
    "np": "^2.9.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-preset-node-module": "^1.0.0",
    "babel-register": "^6.14.0",
    "babel-watch": "^2.0.2",
    "cross-env": "^3.1.3",
    "cross-run": "^1.0.1",
    "in-publish": "^2.0.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "cli": "babel-node src/cli.js",
    "build": "babel src --out-dir lib",
    "test": "cross-env NODE_ENV=test ava",
    "lint": "cross-env NODE_ENV=test xo src",
    "prepublish": "cross-env NODE_ENV=production in-publish && run scripts/build || not-in-publish",
    "postpublish": "rimraf lib"
  },
  "babel": {
    "presets": [
      "node-module"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "esnext": true
  },
  "files": [
    "lib"
  ]
}
