{
  "name": "modern-node",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "meow": "^3.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-jest": "^19.0.0",
    "babel-preset-node-module": "^1.2.1",
    "babel-register": "^6.23.0",
    "babel-watch": "^2.0.6",
    "cross-run": "^1.0.1",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "np": "^2.12.0",
    "prettier-standard": "^1.0.5",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "cli": "babel-node src/cli.js",
    "format": "prettier-standard 'src/**/*.js' 'packages/**/*.js'",
    "build": "babel src --out-dir lib",
    "test": "run NODE_ENV=test jest",
    "precommit": "lint-staged",
    "prepublishOnly": "run NODE_ENV=production babel src --out-dir lib",
    "postpublish": "rimraf lib"
  },
  "files": [
    "lib",
    "src"
  ],
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "rootDir": "./src"
  }
}
